/* pages/search/search.wxss */

.input-text{
  background: #F5F5F5;
  height: 80rpx;
  border-radius: 100rpx;
  padding: 0 20rpx;
  font-size: 12pt;
  transition-duration: 0.3s;
  font-weight: bold;
}
.input-focus{
  box-shadow: 0px 0px 10rpx rgba(0,0,0,0.5);
}

.input-hover{
  color: #CCCCCD;
}


.header{
  padding: 20rpx;
  background: #fff;
  border-bottom: 1px solid #CCCCCD;
  box-shadow: 0px 1px 15rpx rgba(0,0,0,0.1);
  position: relative;
}

.icon-input-close{
  position: absolute;
  right: 40rpx;
  top: 32rpx;
  font-size: 20pt;
  z-index: 999;
  color: #DEDEDE;
}

.icon-input-close.input-hover{
  color: #000;
}